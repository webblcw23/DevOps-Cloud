# Use official .NET 8 SDK image for build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy and restore
COPY . .
RUN dotnet restore

# Build and publish
RUN dotnet publish -c Release -o /app

# Use ASP.NET runtime image for final container
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app .

# Required environment variables
ENV AzureWebJobsScriptRoot=/app \
    AzureFunctionsJobHost__Logging__Console__IsEnabled=true \
    FUNCTIONS_WORKER_RUNTIME=dotnet-isolated \
    AzureFunctionsJobHost__LanguageWorker__DotNetIsolated__WorkerMode=standalone

ENTRYPOINT ["dotnet", "RangersTracker.Functions.dll"]